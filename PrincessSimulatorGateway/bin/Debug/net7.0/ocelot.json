{
  "Routes": [
    {
      "DownstreamPathTemplate": "/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "localhost", "Port": 5051 },
        { "Host": "localhost", "Port": 5052 },
        { "Host": "localhost", "Port": 5053 }
      ],
      "UpstreamPathTemplate": "/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "30s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    },
    {
      "DownstreamPathTemplate": "/simulation/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        { "Host": "localhost", "Port": 5001 },
        { "Host": "localhost", "Port": 5002 },
        { "Host": "localhost", "Port": 5003 }
      ],
      "UpstreamPathTemplate": "/simulation/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "1s",
        "PeriodTimespan": 1,
        "Limit": 1
      },
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      }
    },

    {
      "DownstreamPathTemplate": "/gateway/status",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5080
        }
      ],
      "UpstreamPathTemplate": "/gateway/status",
      "UpstreamHttpMethod": [ "GET"],
      "RateLimitOptions": {
        "ClientWhitelist": [],
        "EnableRateLimiting": true,
        "Period": "30s",
        "PeriodTimespan": 1,
        "Limit": 1
      }
    },
    {
      "DownstreamPathTemplate": "/princess_simulator.v1.ServiceDiscoveryService/{method}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5081  
        }
      ],
      "UpstreamPathTemplate": "/princess_simulator.v1.ServiceDiscoveryService/{method}",
      "UpstreamHttpMethod": [ "POST" ],
      "Grpc": {
        "Enable": true
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8000",
    "RateLimitOptions": {
    "DisableRateLimitHeaders": false,
    "QuotaExceededMessage": "Baka!!!!",
    "HttpStatusCode": 418, 
    "ClientIdHeader": "MyRateLimiting"
  }

}
}